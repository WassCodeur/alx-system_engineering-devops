#!/usr/bin/env bash
# a Bash script that transfers a file from our client to a server
if [ "${BASH_ARGC}"  -lt  3 ]; then
#if [ ! "$4" ]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit
fi
fil="${BASH_ARGV[0]}"
ip="${BASH_ARGV[1]}"
usrname="${BASH_ARGV[2]}"
sshkey="${BASH_ARGV[3]}"
scp -i "$sshkey" "$fil" "usrname"@"$ip":~/
